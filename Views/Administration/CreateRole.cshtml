@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<h1>Create New Role</h1>

<div class="row">
    <div class="col-md-9">
        <form method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="RoleName">Name</label>
                <input type="text" asp-for="RoleName" class="form-control"/>
                <span asp-validation-for="RoleName"></span>
            </div>
            <button class="btn btn-primary mt-2" type="submit" style="width:auto">Create Role</button>
        </form>
    </div>
</div>