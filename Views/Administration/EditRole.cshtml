@model EditRoleViewModel

@{
    ViewBag.Title = "Edit Role";
}

<h1>Edit Role</h1>

<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group row">
        <label asp-for="Id" class="col-sm-1 col-form-label">Id</label>
        <div class="col-sm-9">
            <input type="text" asp-for="Id" disabled class="form-control" />
        </div>
    </div>
    <div class="form-group row mt-2">
        <label asp-for="Name" class="col-sm-1 col-form-label">Name</label>
        <div class="col-sm-9">
            <input type="text" asp-for="Name" class="form-control" />
        </div>
        <span asp-validation-for="Name"></span>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Update</button>
    <a class="btn btn-primary mt-2" asp-controller="administration" asp-action="ListRoles">Cancel</a>
</form>

<div class="card mt-2">
    <div class="card-header">
        Users in this Role
    </div>
    <div class="card-body">
        @if (Model.Users.Any())
        {
            @foreach (var user in Model.Users)
            {
                <h5 class="card-title">@user</h5>
            }
        }
        else
        {
            <h5>None at the moment</h5>
        }
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" style="width:auto" asp-controller="administration" asp-action="EditUsersInRole" asp-route-roleId="@Model.Id">Add or remuve users</a>
    </div>
</div>