@model EditUserViewModel

@{
    ViewBag.Title = "User edit page";
}

<h1>User edit page</h1>

<form method="post">
    <div class="form-group row mb-2">
        <label asp-for="Id" class="col-sm-2 col-form-label">Id</label>
        <div class="col-sm-10">
            <input type="text" asp-for="Id" disabled class="form-control-plaintext">
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="UserName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input asp-for="UserName" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row mb-2">
        <label asp-for="Email" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input asp-for="Email" type="email" class="form-control">
        </div>
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group row">
        <label asp-for="City" class="col-sm-2 col-form-label">City</label>
        <div class="col-sm-10">
            <input asp-for="City" type="text" class="form-control">
        </div>
    </div>
    <div class="form-group row" style="margin-left:2px">
        <button type="submit" class="btn btn-primary m-1" style="width:auto">Update</button>
        <a class="btn btn-primary m-1" asp-controller="Administration" asp-action="ListUsers">Cancel</a>
    </div>
</form>


<div class="card mt-2">
    <div class="card-header">
        <h1>Roles</h1>
    </div>
    <div class="card-body">
        @if (Model.Roles.Any())
         {
            @foreach(var role in Model.Roles)
             {
                    <h5>@role</h5>
             }
         }
         else
         {
            <h5>This user do not have any roles yet</h5>
         }
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-action="ManageRoles" asp-controller="Administration" asp-route-Id="@Model.Id" style="width:auto">Manage Roles</a>
    </div>
</div>

<div class="card mt-2">
    <div class="card-header">
        <h1>Claims</h1>
    </div>
    <div class="card-body">
        @if (Model.Claims.Any())
        {
            @foreach (var claim in Model.Claims)
            {
                <h5>@claim</h5>
            }
        }
        else
        {
            <h5>This user do not have any claims yet</h5>
        }
    </div>
    <div class="card-footer">
        <a class="btn btn-primary" asp-controller="Administration" asp-action="ManageClaims" asp-route-id="@Model.Id" style="width:auto">Manage Claims</a>
    </div>
</div>




