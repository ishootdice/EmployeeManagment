@model IEnumerable<Employee>

@{
    ViewBag.Title = "Employee List";
}

<div class="row">
    @foreach (var employee in Model)
        {
            var photoPath = "/images/" + (employee.PhotoPath ?? "noimage.jpg");

        <div class="col-sm-4 min-width:18rem; max-width:30.5%;">
            <div class="card">
                <div class="card-body text-center">
                    <h5 class="card-title">@employee.Name</h5>
                    <img src="@photoPath" asp-append-version="true" class="card-img-top w-75 imageThumbnail" />
                    <div class="text-center">
                        <a asp-controller="home" asp-action="details" asp-route-id="@employee.Id"
                           class="btn btn-primary m-1">View</a>
                        <a asp-action="edit" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-primary m-1">Edit</a>
                        <a asp-action="delete" asp-controller="home" asp-route-id="@employee.Id" class="btn btn-danger m-1">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>